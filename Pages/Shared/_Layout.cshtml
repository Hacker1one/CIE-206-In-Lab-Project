<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InlabProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> <!-- Ensure Bootstrap CSS is included -->
    <link rel="stylesheet" href="~/css/home.css" />
    <link rel="stylesheet" href="~/css/_layout.css" /> <!-- Add your layout CSS file -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-light border-bottom">
          
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        
                    </ul>
                </div>
        </nav>
    </header>

    <div class="container">
        @RenderBody() <!-- This renders the main content of your Razor Pages -->
    </div>

    <footer class="app-footer">
        <p>&copy; 2024 In Lab Project. All Rights Reserved.</p>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
